  <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
  <script>
   erro = null
        function entrar() {
            em = document.getElementById("Email").value
            sen = document.getElementById("password").value
            
            axios ({
                method : 'post',
                url: 'http://localhost:3333/api/auth/login',
                data: {
                    "email": em,
                    "password": sen
                }
            })
            .then(data => {
                    alert("login efetuado com sucesso")
                    tokenverify =data.data.token  
                    localStorage.setItem('remind',tokenverify)
                    window.location.href = 'http://localhost:3333/home'
                  })
            .catch(erro => { 
              alert("Erro ao logar")
              console.log(erro)
            })
            
            
          
          }
          function checkValid(){
              if(localStorage.getItem("remind") !== null){
                window.location.href = "http://localhost:3333/adm"
              }

         
          }
                
        function register(){
            window.location.href = "http://localhost:3333/register"
        }


